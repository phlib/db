{
    "name": "phlib/db",
    "type": "library",
    "description": "MySQL PDO DB Adapter. PDO with some extra good stuff specifically for MySQL.",
    "keywords": ["mysql", "db", "adapter"],
    "license": "MIT",
    "authors": [
        {
            "name": "James Dempster",
            "email": "james.dempster@emailcenteruk.com",
            "role": "developer"
        },
        {
            "name": "Luke Richards",
            "email": "luke.richards@emailcenteruk.com",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "5.5"
        }
    },
    "require": {
        "php": ">=5.5",

        "symfony/console": "^2.7",
        "phlib/console-configuration": "^1.0",
        "phlib/console-process": "^0.4.0",
        "phlib/config_functions": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Db\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Phlib\\Db\\Tests\\": "tests/"
       }
    },
    "bin": ["bin/db"]
}
