{
    "name": "phlib/db",
    "type": "library",
    "description": "MySQL PDO DB Adapter. PDO with some extra good stuff specifically for MySQL.",
    "keywords": ["mysql", "db", "adapter"],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "James Dempster",
            "email": "james.dempster@emailcenteruk.com",
            "role": "developer"
        },
        {
            "name": "Luke Richards",
            "email": "luke.richards@emailcenteruk.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-pdo": "*",

        "symfony/console": "^3",
        "phlib/console-configuration": "^1.0",
        "phlib/console-process": "^0.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "php-mock/php-mock-phpunit": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Db\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Phlib\\Db\\Tests\\": "tests/"
       }
    },
    "bin": ["bin/db"]
}
