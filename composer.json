{
    "name": "phlib/db",
    "type": "library",
    "description": "MySQL PDO DB Adapter. PDO with some extra good stuff specifically for MySQL.",
    "keywords": ["mysql", "db", "adapter"],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "James Dempster"
        },
        {
            "name": "Luke Richards"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/db/contributors"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Db\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Phlib\\Db\\Tests\\": "tests/"
       }
    },
    "scripts": {
        "cs-check": "vendor/bin/ecs",
        "cs-fix": "vendor/bin/ecs --fix"
    }
}
